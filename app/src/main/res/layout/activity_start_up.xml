<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_login"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <cn.imppp.skin.widght.AnimLogoView
        android:id="@+id/alvStartUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoPlay="false"
        app:gradientAnimDuration="1500"
        app:gradientColor="@color/dark_red"
        app:logoName="Skin"
        app:offsetAnimDuration="1500"
        app:showGradient="true"
        app:textColors="@color/theme"
        app:textPadding="2dp"
        app:textSize="60sp"
        app:verticalOffset="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>